/* Create a program that will accept three numbers as input and display the LARGEST number of the three.  
See the sample output below: 
Enter first number: 12 
Enter second number: 36 
Enter third number: 24 
The LARGEST of the three numbers is 36. */

// BY LEI-ANN EDANG (ENG 1-12)

#include <iostream>
#include <conio.h>

using namespace std;

int main()

{
	
	int x, y, z, largest;
	
	cout << "Enter first number: ";
	cin >> x;
	
	cout << "Enter second number: ";
	cin >> y;
	
	cout << "Enter third number: ";
	cin >> z;
	
	if (x >= y)
	largest = x;
	
	else 
	largest = y;
	
	if (z >= largest)
	largest = z;
	
	cout << endl;
	cout << "The LARGEST of the three numbers is " << largest << "." << endl;
	
	_getch();
	return 0;
	

}
